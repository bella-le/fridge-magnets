      "outDir": "dist",
      "target": "es2017",
      "isolatedModules": false,
      "noEmit": false,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "src"
    },
    "include": ["src/server/**/*.ts"]
}